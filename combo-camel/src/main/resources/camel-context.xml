<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:camel="http://camel.apache.org/schema/spring"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
           http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
    <!-- 心跳 -->
    <bean id="heartBeat" class="com.funny.combo.camel.component.HeartBeatListener" />
    <!-- 自定义聚合策略 -->
<!--    <bean id="aggregationStrategy"-->
<!--          class="com.funny.combo.camel.component.ParallelAggregationStrategy" />-->
    <!-- setup our error handler as the deal letter channel -->
    <bean id="errorHandler" class="org.apache.camel.builder.DeadLetterChannelBuilder">
        <property name="deadLetterUri" value="log:dead?level=ERROR" />
    </bean>

    <camelContext id="camelContext" xmlns="http://camel.apache.org/schema/spring">
        <!-- 心跳检测 -->
        <route>
            <from uri="timer:heart.beat?period=50000" />
            <camel:bean ref="heartBeat" method="heartbeat" />
        </route>

